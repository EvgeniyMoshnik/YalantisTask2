<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="Card">
    </style>

    <style name="Card.Text">
    </style>

    <style name="Card.Text.Top">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/card_item_top_text_size</item>
        <item name="android:alpha">0.87</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card.Text.Bottom">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/card_item_bottom_text_size</item>
        <item name="android:alpha">0.54</item>

    </style>

    <style name="Card.Text.Middle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/card_item_middle_text_size</item>
        <item name="android:alpha">0.54</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Card.Text.Likes">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/card_item_bottom_text_size</item>
        <item name="android:alpha">0.23</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Card.ImageView" />

    <style name="Card.ImageView.Likes">
        <item name="android:alpha">0.19</item>
    </style>

    <style name="Card.ImageView.Category">
        <item name="android:alpha">0.54</item>
    </style>

    <style name="DrawerMenuItemAppearance" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DrawerHeaderTitle">
        <item name="android:textSize">@dimen/nav_header_title_text_size</item>
        <item name="android:textColor">@color/text_title_app</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.69</item>
    </style>

    <style name="FrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/padding_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/padding_top_bottom</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextViewRight" parent="TextView">
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_dividerView</item>
        <item name="android:background">@color/textGrey</item>
    </style>

</resources>
